<div class="container">

       <div class="row">
    <form class="col s12" method="POST" action="/users/buscar">
      <div class="row">
        <div class="input-field col s12">
          <input name="busqueda" id="busqueda" type="text" class="validate">
          <label for="busqueda">Buscar</label>
          <span class="helper-text" data-error="wrong" data-success="right">Introduzca texto o parte a buscar</span>
        </div>
      </div>
    </form>
  </div>
                    

       <h3 class="center-align">LISTADO</h3>
       {{#each rows}}
       <div class="row">


              <div class="col s4">{{nombre}}</div>
              <div class="col s4">{{poblacion}}</div>
              <div class="col s2">
                    <form method="POST" action="/api/borrar/{{id}}?_method=DELETE">
  <button type="submit">Delete</button>
</form>
              </div>
               <div class="col s2">
                   <a href="/users/editar/{{id}}">EDITAR</a>

              </div>



       </div>
       {{/each}}
</div>